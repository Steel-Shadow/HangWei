<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.manage.dish.DishAddActivity">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:layoutAnimation="@anim/layout_fall_down"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        tools:layoutAnimation="@null">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dish_add_rice"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/tag"
                android:text="餐食"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textColor="#00CD00"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dish_add_drink"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/tag"
                android:text="饮料"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textColor="#00CD00"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bg_purple_corner"
            android:alpha="0.83"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">

            <com.example.hangwei_administrator.widget.view.ClearEditText
                android:id="@+id/dish_add_name"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:drawableStart="@drawable/dish_name"
                android:drawablePadding="10dp"
                android:hint="给餐品起一个名字吧"
                android:singleLine="true"
                app:regexType="anything" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="5dp" />

            <com.example.hangwei_administrator.widget.view.ClearEditText
                android:id="@+id/dish_add_price"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:drawableStart="@drawable/dish_price"
                android:drawablePadding="10dp"
                android:hint="设置餐品价格，只能为数字哦"
                android:digits="0123456789."
                android:imeOptions="actionDone"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/red"/>

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginHorizontal="5dp" />

            <RadioGroup
                android:id="@+id/dish_add_radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/dish_add_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅早餐" />

                <RadioButton
                    android:id="@+id/dish_add_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅正餐" />

                <RadioButton
                    android:id="@+id/dish_add_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全天" />

            </RadioGroup>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dish_add_image"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/frame" />

        <com.example.hangwei_administrator.widget.view.SubmitButton
            android:id="@+id/dish_add_post"
            style="@style/NewButtonStyle"
            android:background="@color/gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:text="增加"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck" />


    </LinearLayout>

</LinearLayout>