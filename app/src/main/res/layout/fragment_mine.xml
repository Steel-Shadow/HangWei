<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.MineFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="right"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_msg" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginHorizontal="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_favor" />
    </LinearLayout>

    <!--资料区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mine_avatar"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginVertical="@dimen/dp_5"
                android:text="用户名"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/mine_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginVertical="@dimen/dp_5"
                android:text="邮箱"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mine_btn_reset"
                android:background="@drawable/ic_background_circle_corner"
                android:alpha="0.8"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginVertical="5dp"
                android:text="重置密码" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/bg_corner"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mine_history"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_history" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="历史浏览"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mine_star"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="我的收藏"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mine_posts"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="我的帖子"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_corner"
        android:orientation="vertical">

        <TextView
            style="@style/EditTextStyle"
            android:id="@+id/mine_setting"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_config"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/ic_in"
            android:text="应用设置"/>

        <View
            style="@style/HorizontalLineStyle"
            android:layout_marginHorizontal="5dp" />

        <TextView
            style="@style/EditTextStyle"
            android:id="@+id/mine_invite"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_invite"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/ic_in"
            android:text="邀请朋友"/>

        <View
            style="@style/HorizontalLineStyle"
            android:layout_marginHorizontal="5dp" />

        <TextView
            style="@style/EditTextStyle"
            android:id="@+id/mine_contact"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_contact"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/ic_in"
            android:text="联系我们"/>

        <View
            style="@style/HorizontalLineStyle"
            android:layout_marginHorizontal="5dp" />

        <TextView
            style="@style/EditTextStyle"
            android:id="@+id/mine_support"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:drawableStart="@drawable/ic_support"
            android:drawablePadding="30dp"
            android:drawableEnd="@drawable/ic_in"
            android:text="支持我们"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mine_btn_logout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_vary_corner"
        android:text="退出登录"
        android:textColor="@color/red">

    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>