<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_dish_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/picUrl"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/dish_picture"
        android:src="@drawable/loading" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="菜品名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/home_location_text"
            android:textColor="@color/black50"
            android:textSize="@dimen/sp_15"
            app:drawableStartCompat="@drawable/location" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="价格"
            android:textColor="@color/black50"
            android:textSize="@dimen/sp_15"
            app:drawableStartCompat="@drawable/money" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="123"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/black50"
                android:textSize="@dimen/sp_15"
                app:drawableStartCompat="@drawable/like" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_10"
                android:text="456"
                android:textColor="@color/black50"
                android:textSize="@dimen/sp_15"
                app:drawableStartCompat="@drawable/comment" />

        </LinearLayout>
    </TableLayout>


</LinearLayout>
