<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_dish_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="5dp"
        android:weightSum="1"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picUrl"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/dish_picture"
            android:src="@drawable/loading" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingStart="3dp"
                android:text="菜品名"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/canteen_location"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="@string/home_location_text"
                android:singleLine="true"
                android:textColor="@color/black50"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/location"
                android:drawablePadding="2dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="价格"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_15"
                app:drawableStartCompat="@drawable/money"
                android:drawablePadding="@dimen/dp_5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/like"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="3dp"
                    android:gravity="bottom"
                    android:text="123"
                    android:textColor="@color/black50"
                    android:textSize="15sp"
                    android:drawablePadding="5dp"
                    app:drawableStartCompat="@drawable/post_like" />

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="456"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/sp_15"
                    app:drawableStartCompat="@drawable/comment" />

            </LinearLayout>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
